<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain"
    tools:context=".GenQueueActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/colorWhite"
        app:title="Generate Patient Queue"
        android:background="@color/colorMainDark">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/pa_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:textSize="15dp"
                android:hint="Enter Patient Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/pa_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:textSize="15dp"
                android:hint="Enter Patient Phone No."/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <RadioGroup
                android:id="@+id/radio_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/type_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sick" />

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/type_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Accident" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/pa_sym"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:textSize="15dp"
                android:hint="Enter Patient Symptom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/pa_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:textSize="15dp"
                android:hint="Enter Note to Doctor"/>

        </LinearLayout>


    </LinearLayout>



    <Button
        android:id="@+id/genBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/dark_v_round_button"
        android:text="Generate"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <Button
        android:id="@+id/back_gen"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/violet_round_button"
        android:text="Back"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />



</LinearLayout>